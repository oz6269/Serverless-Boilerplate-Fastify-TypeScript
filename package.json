{
  "name": "serverless-boilerplate-fastify-typescript",
  "version": "1.2.2",
  "description": "Serverless framework Fastify TypeScript",
  "scripts": {
    "dev:db": "tsx scripts/database.ts",
    "dev:server": "cross-env NODE_ENV=development NODE_OPTIONS=--dns-result-order=ipv4first sls offline start --stage offline",
    "dev": "run-p dev:*",
    "tail-log": "sls logs -f app -t",
    "deploy:db": "dotenv -e .env.production -c -- tsx scripts/deployDbProd.ts",
    "deploy:app": "cross-env NODE_ENV=production sls deploy --stage prod",
    "deploy-prod": "run-s deploy:*",
    "remove-prod": "cross-env NODE_ENV=production sls remove --stage prod",
    "clean": "rimraf dist .esbuild .serverless",
    "lint": "eslint .",
    "format": "eslint --fix . && prettier '**/*.{json,yaml}' --write --ignore-path .gitignore",
    "check-types": "tsc --noEmit --pretty",
    "commit": "cz",
    "test": "jest",
    "test:dev": "start-server-and-test dev http://127.0.0.1:4000 'curl --head http://127.0.0.1:4000'",
    "db:push": "prisma db push",
    "prepare": "husky install",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@fastify/helmet": "^13.0.1",
    "@prisma/client": "^6.13.0",
    "fastify": "^5.4.0",
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@commitlint/cz-commitlint": "^19.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@swc/core": "^1.4.8",
    "@swc/jest": "^0.2.36",
    "@types/cross-spawn": "^6.0.6",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.3",
    "dotenv-cli": "^7.4.4",
    "esbuild": "~0.25.8",
    "eslint": "^9.33.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.5",
    "mongodb-memory-server": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "p-retry": "^4.6.2",
    "prettier": "^3.2.5",
    "prisma": "^6.13.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.7",
    "serverless": "^3.40.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-esbuild": "^1.52.1",
    "serverless-offline": "^13.9.0",
    "start-server-and-test": "^2.0.13",
    "supertest": "^6.3.4",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "author": "oz6269 (https://github.com/oz6269)",
  "packageManager": "yarn@3.3.1"
}